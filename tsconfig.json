{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
      ],
      "allowJs": true,
      "jsx": "react",
      "module": "commonjs",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "outDir": "./build/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "baseUrl": "./src"
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
  }
  
  